<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <title>管理画面 - はとあげマート</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>

<%- include("partials/header") %>

<main style="padding:40px">
  <h1>管理画面</h1>

  <section>
    <h2>商品追加</h2>

    <form method="POST" action="/admin/add">
      <input name="slug" placeholder="slug" required>
      <input name="name" placeholder="商品名" required>
      <input name="amount" placeholder="量 (60gなど)" required>
      <input name="price" type="number" placeholder="価格" required>
      <input name="image" placeholder="画像ファイル名" required>
      <button class="btn" type="submit">追加</button>
    </form>
  </section>

  <hr>

  <section>
    <h2>登録済み商品</h2>

    <% if (Array.isArray(products) && products.length > 0) { %>
      <% products.forEach(p => { %>
        <div class="product admin-product">
          <img src="/assets/<%= p.image %>" width="100">
          <strong><%= p.name %></strong>
          <span>¥<%= p.price %></span>
        </div>
      <% }) %>
    <% } else { %>
      <p>まだ商品がありません。</p>
    <% } %>
  </section>
</main>

<%- include("partials/footer") %>

</body>
</html>
